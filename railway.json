{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm cache clean --force && npm install && ng build",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["npm cache clean --force", "npm install --no-audit --no-fund"]
        },
        "build": {
          "cmds": ["npx ng build"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}